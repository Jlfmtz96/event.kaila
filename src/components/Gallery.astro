<style>
    .swiper {
      width: 100%;
      height: 100%;
    }
  
    .swiper-slide {
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 10px; /* Espacio alrededor de cada slide */
      background: transparent; /* Fondo transparente para el efecto Polaroid */
    }
  
    .polaroid {
      background: #fff; /* Fondo blanco para el marco */
      border: 10px solid #fff; /* Marco blanco */
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Sombra para darle profundidad */
      padding: 10px; /* Espacio interno del marco */
      border-radius: 5px; /* Bordes redondeados */
      display: flex;
      flex-direction: column;
      align-items: center; /* Alineación centrada */
      justify-content: center; /* Alineación centrada */
    }
  
    .polaroid img {
      display: block;
      max-width: 100%; /* Ancho máximo de la imagen */
      height: 300px; /* Alto automático para mantener la proporción */
      width: 300px;
      object-fit: cover; /* Asegura que la imagen cubra el área */
    }
  
    .polaroid-caption {
      padding: 16px;
      text-align: center; /* Centrar el texto */
    }
  </style>

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" client:load></script>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const swiper = new Swiper(".mySwiper", {
      slidesPerView: 3,
      spaceBetween: 30,
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
      breakpoints: {
        // Pantallas grandes (3 slides)
        1024: {
          slidesPerView: 3,
          spaceBetween: 30,
        },
        // Pantallas medianas (2 slides)
        768: {
          slidesPerView: 2,
          spaceBetween: 20,
        },
        // Pantallas pequeñas (1 slide)
        390: {
          slidesPerView: 1,
          spaceBetween: 10,
        }
      }
    });
  });
</script>
